{
    "name": "edna",
    "image": "ghcr.io/roboeagles4828/developer-environment:2023",
    "containerEnv": {
        "ACCEPT_EULA": "Y",
        "DISPLAY": "${localEnv:DISPLAY}",
        "NVIDIA_VISIBLE_DEVICES": "all",
        "NVIDIA_DRIVER_CAPABILITIES": "all",
        "SHELL": "/usr/bin/zsh",
        // Nucleus Config
        "OMNI_USER": "admin",
        "OMNI_PASS": "admin",
        "OMNI_SERVER": "omniverse://127.0.0.1/NVIDIA/Assets/Isaac/2022.2.0"
    },
    "remoteEnv": {
        "PATH": "${containerWorkspaceFolder}/scripts:${containerEnv:PATH}" 
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "configureZshAsDefaultShell": true,
            "upgradePackages": false,
            "username": "admin"
        }
    },
    "remoteUser": "admin",
    "postCreateCommand": "./.devcontainer/postCreate.sh",
    "initializeCommand": "./.devcontainer/init.sh",
    "mounts": [
        "source=${localEnv:XAUTHORITY},target=/home/edna/.Xauthority,type=bind", // X11
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind", // docker
        "source=${localEnv:HOME}/docker/isaac-sim,target=/home/admin/docker/isaac-sim,type=bind" // isaac
    ],
    "runArgs": [
        "--runtime=nvidia",
        "--gpus", "all",
        "--network=host",
        "--name=edna"
    ],
    "privileged": true,
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-iot.vscode-ros"
            ]
        }
    }
}